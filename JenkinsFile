pipeline {
    agent any
    stages {
        stage('Initialize'){
            def dockerHome = tool 'myDocker'
            env.PATH = "${dockerHome}/bin:${env.PATH}"
        }
        stage("Building Images") {
         sh "docker build -t ${imageTag} -f Dockerfile"
        }
        stage("Run Tests"){
            steps{
                echo"Testing node"
                    sh "npm install"
                    sh "npx codeceptjs run"     
            }
        }
    }
}
